<h1>Editing Book</h1>

<div>
  <%= flash[:notice] %>
</div>

<% if @book.errors.any? %>
  <%= @book.errors.count %>An error occurred
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><% message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>

<h4>Body</h4>
<%= f.text_field :body %>

<%= f.submit "Update Book" %>
<% end %>

<%= link_to 'Show', @book %> |
<%= link_to 'Back', books_path %>
